script/source = "extends Node2D


export(Vector2) var dim = Vector2(1, 1)
export(String, FILE, \"*.tscn\") var ss
export (NodePath) var sb
export (NodePath) var player_path

func _ready():
	remove_child(get_child(0))
	var temp = load(ss)
	for i in range(dim.x):
		for j in range(dim.y):
			var ins = temp.instance()
			ins.name = str(i) + \".\" + str(j)
			ins.position = Vector2(64*i, 64*j)
			ins.playing = true
			add_child(ins)
	var sb2d = get_node(sb)
	sb2d.position = Vector2(32*dim.x-32, 32*dim.y-32)
	sb2d.scale = Vector2(dim.x, dim.y)


func _on_body_entered(body):
	if \"Body\" in body.name:
		if has_node(player_path):
			get_node(player_path).enable_water()


func _on_body_exited(body):
	if \"Body\" in body.name:
		if has_node(player_path):
			get_node(player_path).disable_water()
"

