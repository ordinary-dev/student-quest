script/source = "extends Node2D

export (String, FILE, \"*.tscn\") var store_scene
export (String, FILE, \"*.tscn\") var speaker_scene
onready var rs = $restore_state
var mr_singer_act := false
export(NodePath) var player
export (String, FILE, \"*.json\") var dialog_v1
export (String, FILE, \"*.json\") var dialog_v2
export (String, FILE, \"*.json\") var dialog_2


func dialog():
	if mr_singer_act and PROP.get(\"day1_dialog\") == \"0\":
		DIALOG.show_dialog(dialog_2)
		mr_singer_act = false


func mr_singer():
	mr_singer_act = true
	if PROP.get(\"day1_dialog\") == \"0\":
		DIALOG.show_dialog(dialog_v1)
	else:
		DIALOG.show_dialog(dialog_v2)


func store():
	save()
	SCENES.load_scene(store_scene)


func save():
	TEMP.save(\"day2_player_pos\", 
		get_node(player).position)
	TEMP.save(\"day2_dialog_used\", 
		mr_singer_act)


func enter(id:String) -> void:
	if PROP.get(\"facility\") == id:
		save()
		SCENES.load_scene(speaker_scene)
	else:
		NOTIFY.show(\"NOENTER\")


# Вход в мехмат
func math():
	enter(\"0\")


# Вход в естественно-научный факультет
func ns():
	enter(\"1\")


# Вход в гуманитарный факультет
func hm():
	enter(\"2\")


func _ready():
	MUSIC.fade_out()
	PROP.save(\"stage\", \"3\")
	if TEMP.is_saved(\"day2_player_pos\"):
		get_node(player).position = TEMP.get(\"day2_player_pos\")
		mr_singer_act = TEMP.get(\"day2_dialog_used\")
	else:
		get_node(player).position = Vector2(-452, 2798)
"

