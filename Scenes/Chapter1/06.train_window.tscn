onready var audio = $AudioStreamPlayer
export(float) var time = 6
export(String, FILE, \"*.tscn\") var next_scene


func _ready():
	audio.play()
	audio.seek(7)
	effect.interpolate_property(
		obj, \"position\",
		Vector2(1086, 577),
		Vector2(983, 577),
		time, Tween.TRANS_LINEAR)
	effect.interpolate_property(
		lgt, \"position\",
		Vector2(2638, 162),
		Vector2(-490, 162),
		time, Tween.TRANS_QUAD, Tween.EASE_IN_OUT)
	effect.start()
	yield(get_tree().create_timer(time), \"timeout\")
	load_scene()


func load_scene() -> void:
	SCENES.load_scene(next_scene)
"

